<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="003-create-journeys" author="mindrevol">
        <createTable tableName="journeys">
            <column name="id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="start_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="visibility" type="VARCHAR(20)" defaultValue="PUBLIC">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)" defaultValue="ONGOING">
                <constraints nullable="false"/>
            </column>
            <column name="invite_code" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>
            <column name="require_approval" type="BOOLEAN" defaultValueBoolean="false"/>
            
            <column name="creator_id" type="VARCHAR(36)">
                <constraints foreignKeyName="fk_j_creator" referencedTableName="users" referencedColumnNames="id"/>
            </column>
            
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="created_by" type="VARCHAR(36)"/>
            <column name="last_modified_by" type="VARCHAR(36)"/>
            <column name="deleted_at" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>
    </changeSet>

    <changeSet id="003-create-journey-participants" author="mindrevol">
        <createTable tableName="journey_participants">
            <column name="id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <column name="journey_id" type="VARCHAR(36)">
                <constraints nullable="false" foreignKeyName="fk_jp_journey" referencedTableName="journeys" referencedColumnNames="id"/>
            </column>
            <column name="user_id" type="VARCHAR(36)">
                <constraints nullable="false" foreignKeyName="fk_jp_user" referencedTableName="users" referencedColumnNames="id"/>
            </column>
            
            <column name="role" type="VARCHAR(20)" defaultValue="MEMBER">
                <constraints nullable="false"/>
            </column>
            <column name="joined_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="current_streak" type="INT" defaultValueNumeric="0"/>
            <column name="total_checkins" type="INT" defaultValueNumeric="0"/>
            <column name="last_checkin_at" type="TIMESTAMP WITH TIME ZONE"/>
            
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="created_by" type="VARCHAR(36)"/>
            <column name="last_modified_by" type="VARCHAR(36)"/>
            <column name="deleted_at" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>
        <addUniqueConstraint columnNames="journey_id, user_id" constraintName="uk_jp" tableName="journey_participants"/>
    </changeSet>

    <changeSet id="003-create-journey-invitations" author="mindrevol">
        <createTable tableName="journey_invitations">
            <column name="id" type="VARCHAR(36)"><constraints primaryKey="true"/></column>
            
            <column name="journey_id" type="VARCHAR(36)">
                <constraints nullable="false" foreignKeyName="fk_ji_journey" referencedTableName="journeys" referencedColumnNames="id"/>
            </column>
            <column name="inviter_id" type="VARCHAR(36)">
                <constraints nullable="false" foreignKeyName="fk_ji_inviter" referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="invitee_id" type="VARCHAR(36)">
                <constraints nullable="false" foreignKeyName="fk_ji_invitee" referencedTableName="users" referencedColumnNames="id"/>
            </column>
            
            <column name="status" type="VARCHAR(20)"><constraints nullable="false"/></column>
            
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP"><constraints nullable="false"/></column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="created_by" type="VARCHAR(36)"/>
            <column name="last_modified_by" type="VARCHAR(36)"/>
            <column name="deleted_at" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>
        <addUniqueConstraint columnNames="journey_id, invitee_id, status" constraintName="uk_ji_spam" tableName="journey_invitations"/>
    </changeSet>

    <changeSet id="003-create-journey-requests" author="mindrevol">
        <createTable tableName="journey_requests">
            <column name="id" type="VARCHAR(36)"><constraints primaryKey="true"/></column>
            
            <column name="journey_id" type="VARCHAR(36)">
                <constraints nullable="false" foreignKeyName="fk_jreq_j" referencedTableName="journeys" referencedColumnNames="id"/>
            </column>
            <column name="user_id" type="VARCHAR(36)">
                <constraints nullable="false" foreignKeyName="fk_jreq_u" referencedTableName="users" referencedColumnNames="id"/>
            </column>
            
            <column name="status" type="VARCHAR(20)" defaultValue="PENDING"><constraints nullable="false"/></column>
            
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP"><constraints nullable="false"/></column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="created_by" type="VARCHAR(36)"/>
            <column name="last_modified_by" type="VARCHAR(36)"/>
            <column name="deleted_at" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>
    </changeSet>

</databaseChangeLog>