<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="005-01-create-habits" author="mindrevol">
        <createTable tableName="habits">
            <column name="id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <column name="user_id" type="VARCHAR(36)">
                <constraints nullable="false" foreignKeyName="fk_habit_user" referencedTableName="users" referencedColumnNames="id"/>
            </column>
            
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="frequency" type="VARCHAR(20)"/>
            <column name="reminder_time" type="TIME"/>
            <column name="start_date" type="DATE"/>
            <column name="end_date" type="DATE"/>
            <column name="journey_id" type="VARCHAR(36)"/>
            <column name="is_archived" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="created_by" type="VARCHAR(36)"/>
            <column name="last_modified_by" type="VARCHAR(36)"/>
            <column name="deleted_at" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>
    </changeSet>

    <changeSet id="005-02-create-habit-logs" author="mindrevol">
        <createTable tableName="habit_logs">
            <column name="id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <column name="habit_id" type="VARCHAR(36)">
                <constraints nullable="false" foreignKeyName="fk_hlog_habit" referencedTableName="habits" referencedColumnNames="id"/>
            </column>
            <column name="checkin_id" type="VARCHAR(36)"/>
            <column name="log_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="created_by" type="VARCHAR(36)"/>
            <column name="last_modified_by" type="VARCHAR(36)"/>
            <column name="deleted_at" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>
        <addUniqueConstraint columnNames="habit_id, log_date" constraintName="uk_habit_log_date" tableName="habit_logs"/>
    </changeSet>

    <changeSet id="005-03-create-gamification" author="mindrevol">
        <createTable tableName="badges">
            <column name="id" type="VARCHAR(36)"><constraints primaryKey="true"/></column>
            <column name="name" type="VARCHAR(100)"><constraints unique="true"/></column>
            <column name="description" type="TEXT"/>
            <column name="icon_url" type="VARCHAR(500)"/>
            <column name="condition_type" type="VARCHAR(50)"/>
            <column name="condition_value" type="INT"/>
            
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="created_by" type="VARCHAR(36)"/>
            <column name="last_modified_by" type="VARCHAR(36)"/>
            <column name="deleted_at" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>

        <createTable tableName="user_badges">
            <column name="id" type="VARCHAR(36)"><constraints primaryKey="true"/></column>
            
            <column name="user_id" type="VARCHAR(36)">
                <constraints nullable="false" foreignKeyName="fk_ubadge_user" referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="badge_id" type="VARCHAR(36)">
                <constraints nullable="false" foreignKeyName="fk_ubadge_badge" referencedTableName="badges" referencedColumnNames="id"/>
            </column>
            
            <column name="earned_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="created_by" type="VARCHAR(36)"/>
            <column name="last_modified_by" type="VARCHAR(36)"/>
            <column name="deleted_at" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>

        <createTable tableName="point_history">
            <column name="id" type="VARCHAR(36)"><constraints primaryKey="true"/></column>
            
            <column name="user_id" type="VARCHAR(36)">
                <constraints nullable="false" foreignKeyName="fk_ph_user" referencedTableName="users" referencedColumnNames="id"/>
            </column>
            
            <column name="amount" type="INT"/>
            <column name="source" type="VARCHAR(50)"/>
            <column name="description" type="TEXT"/>
            <column name="reference_id" type="VARCHAR(36)"/> 
            
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="created_by" type="VARCHAR(36)"/>
            <column name="last_modified_by" type="VARCHAR(36)"/>
            <column name="deleted_at" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>
    </changeSet>

</databaseChangeLog>