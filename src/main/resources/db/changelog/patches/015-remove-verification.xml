<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="015-drop-verification-tables" author="mindrevol">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="checkin_verification"/>
        </preConditions>
        <dropTable tableName="checkin_verification"/>
    </changeSet>

    <changeSet id="015-drop-validity-columns" author="mindrevol">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="checkins" columnName="validity_status"/>
        </preConditions>
        <dropColumn tableName="checkins" columnName="validity_status"/>
    </changeSet>
</databaseChangeLog>