<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="016-add-internal-ads-table" author="mindrevol">
        <createTable tableName="system_ads">
            <column name="id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)"/>
            <column name="image_url" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="cta_link" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="cta_text" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="priority" type="INT" defaultValueNumeric="1"/>
            
            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="created_by" type="VARCHAR(50)"/>
            
            <column name="last_modified_by" type="VARCHAR(50)"/>
            
            <column name="deleted_at" type="DATETIME"/>
        </createTable>
    </changeSet>

</databaseChangeLog>