<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="041-add-receiver-id-to-messages" author="minh">
        <addColumn tableName="messages">
            <column name="receiver_id" type="BIGINT">
                <constraints nullable="true"/> 
            </column>
        </addColumn>

        <addForeignKeyConstraint baseTableName="messages" baseColumnNames="receiver_id"
                                 referencedTableName="users" referencedColumnNames="id"
                                 constraintName="fk_msg_receiver" onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>