<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="022-add-gamification-fields-to-users" author="minh">
        <addColumn tableName="users">
            <column name="points" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="true"/> </column>
            <column name="freeze_streak_count" type="INT" defaultValueNumeric="0">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <update tableName="users">
            <column name="points" valueNumeric="0"/>
            <where>points IS NULL</where>
        </update>
        <update tableName="users">
            <column name="freeze_streak_count" valueNumeric="0"/>
            <where>freeze_streak_count IS NULL</where>
        </update>
    </changeSet>

</databaseChangeLog>