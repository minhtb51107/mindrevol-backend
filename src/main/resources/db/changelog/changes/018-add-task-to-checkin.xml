<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="018-01-add-journey-task-id-to-checkins-fix" author="minh">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="checkins" columnName="task_id"/>
            </not>
        </preConditions>
        
        <addColumn tableName="checkins">
            <column name="task_id" type="UUID">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="018-02-add-fk-constraint-task" author="minh">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_checkin_task"/>
            </not>
        </preConditions>

        <addForeignKeyConstraint baseTableName="checkins" baseColumnNames="task_id"
                                 referencedTableName="journey_tasks" referencedColumnNames="id"
                                 constraintName="fk_checkin_task" onDelete="SET NULL"/>
    </changeSet>

</databaseChangeLog>