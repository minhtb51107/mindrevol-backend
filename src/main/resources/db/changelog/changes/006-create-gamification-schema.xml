<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="006-01-create-badges-table" author="minh">
        <createTable tableName="badges">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/> </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="icon_url" type="VARCHAR(500)"/> <column name="condition_type" type="VARCHAR(50)"/> <column name="condition_value" type="INT"/> <column name="created_at" type="TIMESTAMP"/>
        </createTable>
        
        <insert tableName="badges">
            <column name="code" value="FIRST_STEP"/>
            <column name="name" value="Bước chân đầu tiên"/>
            <column name="description" value="Hoàn thành check-in lần đầu tiên"/>
            <column name="condition_type" value="TOTAL_CHECKIN"/>
            <column name="condition_value" value="1"/>
            <column name="created_at" valueDate="NOW()"/>
        </insert>
        <insert tableName="badges">
            <column name="code" value="STREAK_7"/>
            <column name="name" value="Chiến binh tuần"/>
            <column name="description" value="Duy trì liên tục 7 ngày"/>
            <column name="condition_type" value="STREAK"/>
            <column name="condition_value" value="7"/>
            <column name="created_at" valueDate="NOW()"/>
        </insert>
        <insert tableName="badges">
            <column name="code" value="PHOENIX_REBORN"/>
            <column name="name" value="Phượng hoàng tái sinh"/>
            <column name="description" value="Thực hiện một cú Comeback ấn tượng"/>
            <column name="condition_type" value="COMEBACK"/>
            <column name="condition_value" value="1"/>
            <column name="created_at" valueDate="NOW()"/>
        </insert>
    </changeSet>

    <changeSet id="006-02-create-user-badges-table" author="minh">
        <createTable tableName="user_badges">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="badge_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="journey_id" type="UUID"/> <column name="earned_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="user_badges" baseColumnNames="user_id" referencedTableName="users" referencedColumnNames="id" constraintName="fk_userbadge_user"/>
        <addForeignKeyConstraint baseTableName="user_badges" baseColumnNames="badge_id" referencedTableName="badges" referencedColumnNames="id" constraintName="fk_userbadge_badge"/>
        
        <addUniqueConstraint tableName="user_badges" columnNames="user_id, badge_id" constraintName="uq_user_badge"/>
    </changeSet>

</databaseChangeLog>