<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="011-01-add-journey-id-to-habits" author="minh">
        <addColumn tableName="habits">
            <column name="journey_id" type="UUID">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        
        <addForeignKeyConstraint baseTableName="habits" baseColumnNames="journey_id"
                                 referencedTableName="journeys" referencedColumnNames="id"
                                 constraintName="fk_habit_journey"/>
        
        <createIndex tableName="habits" indexName="idx_habit_journey_user">
            <column name="journey_id"/>
            <column name="user_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>