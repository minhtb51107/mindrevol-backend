<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="028-create-user-blocks-table" author="minh">
        <createTable tableName="user_blocks">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="blocker_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="blocked_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="user_blocks" baseColumnNames="blocker_id"
                                 referencedTableName="users" referencedColumnNames="id"
                                 constraintName="fk_blocks_blocker" onDelete="CASCADE"/>

        <addForeignKeyConstraint baseTableName="user_blocks" baseColumnNames="blocked_id"
                                 referencedTableName="users" referencedColumnNames="id"
                                 constraintName="fk_blocks_blocked" onDelete="CASCADE"/>

        <addUniqueConstraint tableName="user_blocks" columnNames="blocker_id, blocked_id"
                             constraintName="uq_user_blocks"/>
                             
        <createIndex tableName="user_blocks" indexName="idx_blocks_blocker">
            <column name="blocker_id"/>
        </createIndex>
        <createIndex tableName="user_blocks" indexName="idx_blocks_blocked">
            <column name="blocked_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>