<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="005-01-create-conversations-table" author="minh">
        <createTable tableName="conversations">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user1_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="user2_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            
            <column name="last_message_content" type="TEXT"/>
            <column name="last_message_at" type="TIMESTAMP"/>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>

        <addUniqueConstraint tableName="conversations" columnNames="user1_id, user2_id" constraintName="uq_conversation_users"/>
        <addForeignKeyConstraint baseTableName="conversations" baseColumnNames="user1_id" referencedTableName="users" referencedColumnNames="id" constraintName="fk_conv_user1"/>
        <addForeignKeyConstraint baseTableName="conversations" baseColumnNames="user2_id" referencedTableName="users" referencedColumnNames="id" constraintName="fk_conv_user2"/>
    </changeSet>

    <changeSet id="005-02-create-messages-table" author="minh">
        <createTable tableName="messages">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <column name="conversation_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="sender_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            
            <column name="content" type="TEXT"/>
            
            <column name="type" type="VARCHAR(20)" defaultValue="TEXT"/>
            
            <column name="media_url" type="VARCHAR(500)"/>
            
            <column name="reply_to_checkin_id" type="UUID"/>
            
            <column name="is_read" type="BOOLEAN" defaultValue="false"/>
            
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="messages" baseColumnNames="conversation_id" referencedTableName="conversations" referencedColumnNames="id" constraintName="fk_msg_conv"/>
        <addForeignKeyConstraint baseTableName="messages" baseColumnNames="sender_id" referencedTableName="users" referencedColumnNames="id" constraintName="fk_msg_sender"/>
        <addForeignKeyConstraint baseTableName="messages" baseColumnNames="reply_to_checkin_id" referencedTableName="checkins" referencedColumnNames="id" constraintName="fk_msg_checkin"/>
        
        <createIndex tableName="messages" indexName="idx_msg_conv_created">
            <column name="conversation_id"/>
            <column name="created_at" descending="true"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>