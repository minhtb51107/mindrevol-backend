<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="007-01-create-habits-table" author="minh">
        <createTable tableName="habits">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            
            <column name="frequency" type="VARCHAR(20)"/>
            
            <column name="reminder_time" type="TIME"/>
            
            <column name="start_date" type="DATE"/>
            <column name="end_date" type="DATE"/>
            
            <column name="is_archived" type="BOOLEAN" defaultValue="false"/>
            
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>
        
        <addForeignKeyConstraint baseTableName="habits" baseColumnNames="user_id" referencedTableName="users" referencedColumnNames="id" constraintName="fk_habit_user"/>
    </changeSet>

    <changeSet id="007-02-create-habit-logs-table" author="minh">
        <createTable tableName="habit_logs">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="habit_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="checkin_id" type="UUID"/> <column name="log_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/> </column>
            
            <column name="created_at" type="TIMESTAMP"/>
        </createTable>
        
        <addForeignKeyConstraint baseTableName="habit_logs" baseColumnNames="habit_id" referencedTableName="habits" referencedColumnNames="id" constraintName="fk_log_habit"/>
        
        <addUniqueConstraint tableName="habit_logs" columnNames="habit_id, log_date" constraintName="uq_habit_log_date"/>
    </changeSet>

</databaseChangeLog>