<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="014-create-reports-table" author="minh">
        <createTable tableName="reports">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="reporter_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="target_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="target_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="reason" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="status" type="VARCHAR(20)" defaultValue="PENDING">
                <constraints nullable="false"/>
            </column>
            <column name="handler_id" type="BIGINT"/>
            <column name="admin_note" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="reports" baseColumnNames="reporter_id"
                                 referencedTableName="users" referencedColumnNames="id"
                                 constraintName="fk_reports_reporter" onDelete="CASCADE"/>
        
        <addForeignKeyConstraint baseTableName="reports" baseColumnNames="handler_id"
                                 referencedTableName="users" referencedColumnNames="id"
                                 constraintName="fk_reports_handler" onDelete="SET NULL"/>
    </changeSet>
</databaseChangeLog>