<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="033-add-verification-to-journeys" author="minh">
        <addColumn tableName="journeys">
            <column name="setting_req_verification" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="033-create-checkin-verifications-table" author="minh">
        <createTable tableName="checkin_verifications">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="checkin_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="voter_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="is_approved" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="checkin_verifications" baseColumnNames="checkin_id"
                                 referencedTableName="checkins" referencedColumnNames="id"
                                 constraintName="fk_verification_checkin" onDelete="CASCADE"/>

        <addForeignKeyConstraint baseTableName="checkin_verifications" baseColumnNames="voter_id"
                                 referencedTableName="users" referencedColumnNames="id"
                                 constraintName="fk_verification_voter" onDelete="CASCADE"/>

        <addUniqueConstraint tableName="checkin_verifications" columnNames="checkin_id, voter_id"
                             constraintName="uq_verification_vote"/>
    </changeSet>

</databaseChangeLog>