<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="004-01-create-checkins-table" author="minh">
        <createTable tableName="checkins">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="journey_id" type="UUID">
                <constraints nullable="false"/>
            </column>

            <column name="image_url" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="thumbnail_url" type="VARCHAR(500)"/>

            <column name="emotion" type="VARCHAR(20)">
                <constraints nullable="false"/> </column>
            
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/> </column>

            <column name="caption" type="TEXT"/>
            
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            
            <column name="created_by" type="VARCHAR(50)"/> <column name="updated_at" type="TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="checkins" baseColumnNames="user_id"
                                 referencedTableName="users" referencedColumnNames="id"
                                 constraintName="fk_checkin_user"/>
                                 
        <addForeignKeyConstraint baseTableName="checkins" baseColumnNames="journey_id"
                                 referencedTableName="journeys" referencedColumnNames="id"
                                 constraintName="fk_checkin_journey"/>

        <createIndex tableName="checkins" indexName="idx_checkin_journey_date">
            <column name="journey_id"/>
            <column name="created_at" descending="true"/>
        </createIndex>
    </changeSet>

    <changeSet id="004-02-create-checkin-comments" author="minh">
        <createTable tableName="checkin_comments">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="checkin_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint baseTableName="checkin_comments" baseColumnNames="checkin_id"
                                 referencedTableName="checkins" referencedColumnNames="id"
                                 constraintName="fk_comment_checkin"/>
    </changeSet>

</databaseChangeLog>