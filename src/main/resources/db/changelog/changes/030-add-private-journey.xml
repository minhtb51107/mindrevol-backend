<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="030-add-require-approval-to-journeys" author="minh">
        <addColumn tableName="journeys">
            <column name="require_approval" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="030-create-journey-requests-table" author="minh">
        <createTable tableName="journey_requests">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="journey_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="journey_requests" baseColumnNames="journey_id"
                                 referencedTableName="journeys" referencedColumnNames="id"
                                 constraintName="fk_request_journey" onDelete="CASCADE"/>

        <addForeignKeyConstraint baseTableName="journey_requests" baseColumnNames="user_id"
                                 referencedTableName="users" referencedColumnNames="id"
                                 constraintName="fk_request_user" onDelete="CASCADE"/>

        <addUniqueConstraint tableName="journey_requests" columnNames="journey_id, user_id"
                             constraintName="uq_journey_request_user"/>
    </changeSet>

</databaseChangeLog>